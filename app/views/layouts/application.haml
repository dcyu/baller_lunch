!!! 5
%html
  %head
    %title Baller Lunch
    %link{:href => "http://fonts.googleapis.com/css?family=Josefin+Slab:400,700", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "http://fonts.googleapis.com/css?family=Raleway:400,700", :rel => "stylesheet", :type => "text/css"}/
    = favicon_link_tag 'fav.png'
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body

    %header.l-header.clearfix
      %a.logo.is-left{:href => "#{root_path}"} 
        %span.t-orange> BALLER
        %span.t-dark_blue> LUNCH 

      %nav.l-header-nav 
        %ul.l-header-nav.is-right
          - if current_user
            %li 
              = link_to "#{current_user.first_name.downcase}", user_path(current_user.id)
            %li
              = link_to "sign out", sign_out_path
          - elsif current_admin
            %li 
              = link_to "admin", admin_path(current_admin.id)
            %li 
              = link_to "sign out", sign_out_path
          - else
            %li 
              %a{:href => "#{sign_in_path}"} sign in
            %li 
              %a{:href => "#{sign_up_path}"} sign up
          %li 
            %a{:href => "#{contact_path}"} contact
          %li 
            %a{:href => "#{faq_path}"} faq
          %li 
            %a{:href => "#{about_path}"} about
    .l-container.is-ta-center
      = yield
    
    %footer.l-footer 
      %p 
        Site created and designed by
        %a{:href => "http://danielyu.me/"} Daniel Yu

